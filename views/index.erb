<h1>Contacts</h1>

<h3>Add a contact here:</h3>

<form action='/contact' method='post'>
  <label for='contact_names'>Contact name:</label>
  <input id='contact_names' name='contact_names' type='text'>
  <label for='phone_number'>Phone number:</label>
  <input id='phone_number' name='phone_number' type='text'>
  <button type='submit'>Add Contact</button>
</form>

<ul>
  <% @contacts.each() do |contact| %>
    <li><a href="/contacts/<% contact.id %>"><%= contact.contact_names %> </a><%= contact.contact_phone_numbers %></li>
  <% end %>
</ul>
